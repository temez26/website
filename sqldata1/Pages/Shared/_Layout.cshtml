<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bonkkers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
   
  
</head>
<body onload="applySavedMode()">
    <div id="contentWrapper" class="content-hidden">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-transparent border-bottom box-shadow mb-3">
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="order-2">
                            <div id="dark" class="form-check form-switch fs-5 d-flex align-items-center" ">
                                <input class="form-check-input" type="checkbox" id="darkModeToggle" onclick="toggleDarkMode()">
                                <label class="form-check-label" for="darkModeToggle">
                                    <span id="darkModeText" class="text-white">Light Mode</span>
                                    <span id="darkModeIcon" class="fas fa-sun"></span>
                                </label>
                            </div>
                        </div>
                        <div class="order-3">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                        <div class="order-1">
                            <a class="navbar-brand fs-1" asp-area="" asp-page="/Index">Bonkkers</a>
                        </div>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav flex-grow-1 fs-3">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Privacy">Gallery</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Clients/Index">Clients</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>







    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    

    
    <footer class="text-muted">
        <div class="container">
            <div class="adjust-margin">
                <h2 class="text-white">Socials</h2>

                <!-- Linkedin -->
                <a class="btn btn-primary btn-floating m-1" style="background-color: #0082ca" href="https://www.linkedin.com/in/teemu-kalmari-755469169/" role="button" target="_blank"><i class="fa fa-linkedin"></i></a>
                <!-- Github -->
                <a class="btn btn-primary btn-floating m-1" style="background-color: #333333" href="https://github.com/temez26" role="button" target="_blank"><i class="fa fa-github"></i></a>
            </div>


            <div class="adjust-margin">
                <!--Grid column-->

                <h5 class="text-uppercase text-white">Contact Me</h5>

                <ul class="list-unstyled mb-0">
                    <li>
                        <a class="text-white">Email: Teemu.Kalmari@gmail.com</a>
                    </li>
                    <li>
                        <a class="text-white">Phone number: 0401636626</a>
                    </li>
                </ul>

            </div>


            <div class="image-container3" style=" max-width: 100%;">
                <img src="~/images/fish.png" alt="Your Image" class="image-container3" style="border-radius: 45%; width: 15%;
    height: auto; float:right; margin-right:3%; margin-top: -14.8%; ">
            </div>
        </div>

        <div style="background-color: rgba(0, 0, 0, 0.2); border-radius: 2px; margin-top:1%; " class="border-top text-center p-3 text-white footer">
            © 2023 Copyright:
            Teemu Kalmari
        </div>
    </footer>
    
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

   

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
